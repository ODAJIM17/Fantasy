@page "/teams"

<h3>@Localizer["Teams"]</h3>

<div class="mb-3">
    <a class="btn btn-sm btn-primary" href="/teams/create">@Localizer["New"] @Localizer["Team"]</a>
</div>

<GenericList MyList="Teams">
    <Body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Localizer["Team"]</th>
                    <th class="text-center">@Localizer["Image"]</th>
                    <th>@Localizer["Country"]</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var team in Teams!)
                {
                    <tr>
                        <td>@team.Name</td>
                        <td class="text-center"><img src="@team.ImageFull" style="width:80px; height:60px" /></td>
                        <td>@team.Country!.Name</td>
                        <td>
                            <a class="btn btn-sm btn-warning" href="/teams/edit/@team.Id">@Localizer["Edit"]</a>
                            <button class="btn btn-sm btn-danger" @onclick=@(() => DeleteAsync(team))>@Localizer["Delete"]</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </Body>
</GenericList>